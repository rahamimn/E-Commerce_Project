
<%- include('../partials/header',{user}) %>
    <div class="card" style="margin:0 auto; width:250px; ">
        <article class="card-body">
            <h4 class="card-title text-center mb-4 mt-1">Sign in</h4>
            <hr>
            <p id ="login-error" class="text-success text-center"></p>
            <form id="form" onsubmit="onSubmit(event)">
            <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                </div>
                <input id="userIN" name="username" class="form-control" placeholder="Username" type="text">
            </div> <!-- input-group.// -->
            </div> <!-- form-group// -->
            <div class="form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                </div>
                <input name="password" class="form-control" placeholder="******" type="password">
            </div> <!-- input-group.// -->
            </div> <!-- form-group// -->
            <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block"> Login  </button>
            </div> <!-- form-group// -->
            <p class="text-center"><a href="#" class="btn">Forgot password?</a></p>
            </form>
        </article>
    </div> <!-- card.// -->

</div>
<script>
    function onSubmit(event){
        event.preventDefault();
        var userName = $("[type=text]").val();
        var password = $("[type=password]").val();
        postData(`/login`, {userName,password})
        .then(data => {
            if(data.status<0)
                $("#login-error").text(data.err);
            else
                document.location.href = '/';
            
        }) // JSON-string from `response.json()` call
        .catch(error => console.error(error));
    };

</script>
</html>