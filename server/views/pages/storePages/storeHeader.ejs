    
<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../../partials/head %>
</head>
<body class="container" style="padding-top:10px">

<header>
    <%- include('../../partials/header',{user}) %>
</header>

<div class="container">
  <div class="row">
    <div class="col-3" style="padding:0; background-color:#abcbd0 ; min-height:600px">
    <main>
          <ul class="list-group list-group-flush">
            <%if(user.role.name === 'store-owner' || user.role.permissions.includes('add-product')){%>
            <li class="list-group-item d-flex justify-content-between align-items-center list-group-item-info"">
              <a href="/store-panel/<%=storeId%>/addProduct" >Add Product</a>
            </li>
              <%}%>
            <li class="list-group-item d-flex justify-content-between align-items-center list-group-item-info">
              <a href="/store-panel/<%=storeId%>/manage-products"> Manage Product</a>
            </li>
            <%if(user.role.name === 'store-owner' || user.role.permissions.includes('watch-workers')){%>
            <li class="list-group-item d-flex justify-content-between align-items-center list-group-item-info">
                <a href="/store-panel/<%=storeId%>/workers" > Manage Workers </a>
            </li>
            <%}%>
            <%if(user.role.name === 'store-owner' || user.role.permissions.includes('manage-purchase-policy')){%>
            <li class="list-group-item d-flex justify-content-between align-items-center list-group-item-info">
                <a href="/store-panel/<%=storeId%>/purchase-rules" > Manage Purchase Policy </a>
            </li>
            <%}%>
            <%if(user.role.name === 'store-owner' || user.role.permissions.includes('manage-sales')){%>
            <li class="list-group-item d-flex justify-content-between align-items-center list-group-item-info">
                <a href="/store-panel/<%=storeId%>/sale-rules" > Manage Sales </a>
            </li>
            <%}%>
            <li class="list-group-item d-flex justify-content-between align-items-center list-group-item-info">
              <a href="/user-panel" >User Panel</a>
            </li>
          </ul>
      </main>

      
    </div>  
    <div class="col-9" style="padding:0; border-radius: 15px 0 0 15px">
    <main>
        <div class="jumbotron" style="min-height:600px; margin-bottom: 0;">
